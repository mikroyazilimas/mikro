@model SitefinityWebApp.Mvc.Models.ViewModel.AuthorizedDealerForm



<div class="hr-form">
    <div class="hr-form-section">
        <div class="hr-form-title">
            <span>Firma <strong>Bilgileri</strong></span>
        </div>
        <div class="hr-form-input">
            <div class="hr-form-input-left">
                <div class="hr-form-input-item">
                    <label for="">Firma Adı</label>
                    @Html.TextBoxFor(m => m.CompanyName, new { required = "required", placeholder = "Firma Adı*", message="Lütfen Firma Adınızı Seçiniz" })
                </div>
                <div class="hr-form-input-item">
                    <label for="">İl</label>
                    <select name="" id="" required = "required" message="Lütfen İl Seçiniz">
                        <option value="1"></option>
                    </select>
                </div>
                <div class="hr-form-input-item">
                    <label for="">İlçe</label>
                    @Html.TextBoxFor(m => m.Town, new { required = "required", placeholder = "İlçe*", message="Lütfen İlçe Seçiniz" })
                </div>
                <div class="hr-form-input-item">
                    <label for="">Fax</label>
                    @Html.TextBoxFor(m => m.Fax, new { placeholder = "Fax" })
                </div>
                <div class="hr-form-input-item">
                    <label for="">Adres</label>
                    @Html.TextAreaFor(m => m.Adress, new { placeholder = "Mesajınız*" , required = "required", message="Lütfen Mesajınızı Giriniz"})
                </div>
            </div>
            <div class="hr-form-input-right">
                <div class="hr-form-input-item">
                    <label for="">Yetkili</label>
                    @Html.TextBoxFor(m => m.Authorized, new { placeholder = "Yetkili*", required = "required", message="Lütfen Yetkili Giriniz" })
                </div>
                <div class="hr-form-input-item">
                    <label for="">Görev</label>
                    @Html.TextBoxFor(m => m.Task, new { placeholder = "Görev*" , required = "required", message="Lütfen Görev Giriniz" })
                </div>
                <div class="hr-form-input-item">
                    <label for="">Posta Kodu</label>
                    @Html.TextBoxFor(m => m.PostCode, new { placeholder = "Posta Kodu" })
                </div>
                <div class="hr-form-input-item">
                    <label for="">E-Posta</label>
                    @Html.TextBoxFor(m => m.EMail, new { placeholder = "E-Posta*", required = "required", pattern = @"[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$", message ="Lütfen E-Posta Giriniz"})
                </div>
                <div class="hr-form-input-item">
                    <label for="">Telefon</label>
                    
                    @Html.TextBoxFor(m => m.phone, new { message = "Lütfen Telefon Numaranızı Giriniz", pattern = ".{0}|.{13,13}", required = "required", maxlength = "16", placeholder = "Telefon Numaranız*", @class = "phones number", title = "Telefon numaranızı başında 0 olmadan 10 hane olacak şekilde yazınız" })
                </div>
            </div>
        </div>
    </div>
    <div class="hr-form-section">
        <div class="hr-form-title">
            <span>Genel <strong>Bilgiler</strong></span>
        </div>
        <div class="hr-form-input">
            <div class="hr-form-input-left">
                <div class="hr-form-input-item">
                    <label for="">Genel Müdür</label>
                    @Html.TextBoxFor(m => m.GManager, new { placeholder = "Genel Müdür*", required = "required", message="Lütfen Genel Müdür İsmini Giriniz"  })
                </div>

                <div class="hr-form-input-item">
                    <label for="">Genel Müdür Yardımcısı</label>
                    @Html.TextBoxFor(m => m.GAsstManager, new { placeholder = "Genel Müdür Yardımcısı"})
                </div>
                <div class="hr-form-input-item">
                    <label for="">Pazarlama Müdürü</label>
                    @Html.TextBoxFor(m => m.GMarketManager, new { placeholder = "Pazarlama Müdürü" })
                </div>
            </div>
            <div class="hr-form-input-right">
                <div class="hr-form-input-item">
                    <label for="">Teknik Servis Müdürü</label>
                    @Html.TextBoxFor(m => m.GTechManager, new { placeholder = "Teknik Servis Müdürü" })
                </div>
                <div class="hr-form-input-item">
                    <label for="">Satış Temsilcileri</label>
                    @Html.TextBoxFor(m => m.GSalesRepresentative, new { placeholder = "Satış Temsilcileri" })
                </div>
            </div>
        </div>
    </div>
    <div class="hr-form-section">
        <div class="hr-form-title">
            <span>Muhasebe <strong>Bilgiler</strong></span>
        </div>
        <div class="hr-form-input">
            <div class="hr-form-input-left">
                <div class="hr-form-input-item">
                    <label for="">Muhasebe Sorumlusu</label>
                    @Html.TextBoxFor(m => m.MAccountant, new { placeholder = "Muhasebe Sorumlusu" })
                </div>

                <div class="hr-form-input-item">
                    <label for="">Vergi Dairesi</label>
                    @Html.TextBoxFor(m => m.MTaxAdmin, new { placeholder = "Vergi Dairesi*" , required = "required", message="Lütfen Vergi Dairenizi Giriniz" })
                </div>
                <div class="hr-form-input-item">
                    <label for="">Vergi Numarası</label>
                    @Html.TextBoxFor(m => m.MTaxNumber, new { placeholder = "Vergi Numarası*", required = "required", message="Lütfen Vergi Numaranızı Giriniz" , maxlength = "10", pattern = "[0-9]+" })
                </div>
            </div>
            <div class="hr-form-input-right">
                <div class="hr-form-input-item">
                    <label for="">Kuruluş Yılı</label>
                    @Html.TextBoxFor(m => m.MYearEstablishment, new { placeholder = "Kuruluş Yılı*" , required = "required" ,maxlength = "4", pattern = "[0-9]+" ,message = "Lütfen Şirketinizin Kuruluş Yılını Giriniz" })
                </div>
                <div class="hr-form-input-item">
                    <label for="">Kayıt Sermayesi</label>
                    @Html.TextBoxFor(m => m.MRecordCapital, new { placeholder = "Kayıt Sermayesi*" , required = "required", message="Lütfen Kayıt Sermayesini Giriniz"  })
                </div>
            </div>
        </div>
    </div>
    <div class="hr-form-section">
        <div class="hr-form-title">
            <span>İşyeri <strong>Bilgileri</strong></span>
        </div>
        <div class="hr-form-input workplace_info">
            <div class="hr-form-input-item">
                <div class="hr-form-input-item__text">
                    <label>*İş yeri Firmaya mı ait?</label>
                </div>
                <div class="hr-form-input-item__radio">
                    <label for="evet"><input type="radio" id="evet" name="onay1" required message="Lütfen İşyeri Firmaya mı ait? Sorusunu Cevaplayınız">Evet</label>
                    <label for="hayir"><input type="radio" id="hayir" name="onay1">Hayır</label>
                </div>
            </div>
            <div class="hr-form-input-item">
                <div class="hr-form-input-item__text">
                    <label>*İş Yerinde Showroom Var mı?</label>
                </div>
                <div class="hr-form-input-item__radio">
                    <label for="var"><input type="radio" id="var" name="onay2" required message="Lütfen İş Yerinizde Showroom Var Mı? Sorusunu Cevaplayınız">Var</label>
                    <label for="yok"><input type="radio" id="yok" name="onay2">Yok</label>
                </div>
            </div>
        </div>
    </div>
    <div class="hr-form-section">
        <div class="hr-form-title">
            <span>Çalıştığınız <strong>Bankalar</strong></span>
        </div>
        <div class="hr-form-input bank">
            <div class="hr-form-input-item">
                <label for="">Banka Adı</label>
                @Html.TextBoxFor(m => m.BName, new { placeholder = "Banka Adı" })
            </div>
            <div class="hr-form-input-item">
                <label for="">Hesap No</label>
                @Html.TextBoxFor(m => m.BAccountNo, new { placeholder = "Hesap No" })
            </div>
            <div class="hr-form-input-item">
                <label for="">Telefon</label>
                @Html.TextBoxFor(m => m.BPhone, new { message = "Lütfen Telefon Numaranızı Giriniz", pattern = ".{0}|.{13,13}", maxlength = "16", placeholder = "Telefon Numaranız", @class = "phones number", title = "Telefon numaranızı başında 0 olmadan 10 hane olacak şekilde yazınız" })
            </div>
        </div>
        <div class="hr-form-input bank">
            <div class="hr-form-input-item">
                <label for="">Banka Adı</label>
                @Html.TextBoxFor(m => m.BName2, new { placeholder = "Banka Adı" })
            </div>
            <div class="hr-form-input-item">
                <label for="">Hesap No</label>
                @Html.TextBoxFor(m => m.BAccountNo2, new { placeholder = "Hesap No" })
            </div>
            <div class="hr-form-input-item">
                <label for="">Telefon</label>
                @Html.TextBoxFor(m => m.BPhone2, new { message = "Lütfen Telefon Numaranızı Giriniz", pattern = ".{0}|.{13,13}", maxlength = "16", placeholder = "Telefon Numaranız", @class = "phones number", title = "Telefon numaranızı başında 0 olmadan 10 hane olacak şekilde yazınız" })
            </div>
        </div>
        <div class="hr-form-input bank">
            <div class="hr-form-input-item">
                <label for="">Banka Adı</label>
                @Html.TextBoxFor(m => m.BName3, new { placeholder = "Banka Adı" })
            </div>
            <div class="hr-form-input-item">
                <label for="">Hesap No</label>
                @Html.TextBoxFor(m => m.BAccountNo3, new { placeholder = "Hesap No" })
            </div>
            <div class="hr-form-input-item">
                <label for="">Telefon</label>
                @Html.TextBoxFor(m => m.BPhone3, new { message = "Lütfen Telefon Numaranızı Giriniz", pattern = ".{0}|.{13,13}",  maxlength = "16", placeholder = "Telefon Numaranız", @class = "phones number", title = "Telefon numaranızı başında 0 olmadan 10 hane olacak şekilde yazınız" })
            </div>
        </div>
    </div>
    <div class="hr-form-section">
        <div class="hr-form-title">
            <span>Referanslar</span>
        </div>
        <div class="hr-form-input bank">
            <div class="hr-form-input-item">
                <label for="">Referans Adı Soyadı</label>
                @Html.TextBoxFor(m => m.RName, new { placeholder = "Referans Adı Soyadı*" , required= "required" , message="Lütfen Referansınızın Adını ve Soyadını Giriniz" })
            </div>
            <div class="hr-form-input-item">
                <label for="">Yetkili</label>
                @Html.TextBoxFor(m => m.RAuthorized, new { placeholder = "Yetkili*" ,  message = "Lütfen Referansınızın Yetkilisini Giriniz", required = "required" })
            </div>
            <div class="hr-form-input-item">
                <label for="">Telefon</label>
                @Html.TextBoxFor(m => m.RPhone, new { message = "Lütfen Telefon Numaranızı Giriniz", pattern = ".{0}|.{13,13}",  maxlength = "16", placeholder = "Telefon Numaranız*", @class = "phones number", title = "Telefon numaranızı başında 0 olmadan 10 hane olacak şekilde yazınız" ,required = "required" })
            </div>
        </div>
        <div class="hr-form-input bank">
            <div class="hr-form-input-item">
                <label for="">Referans Adı Soyadı</label>
                @Html.TextBoxFor(m => m.RName2, new { placeholder = "Referans Adı Soyadı" })
            </div>
            <div class="hr-form-input-item">
                <label for="">Yetkili</label>
                @Html.TextBoxFor(m => m.RAuthorized2, new { placeholder = "Yetkili" })
            </div>
            <div class="hr-form-input-item">
                <label for="">Telefon</label>
                @Html.TextBoxFor(m => m.RPhone2, new { message = "Lütfen Telefon Numaranızı Giriniz", pattern = ".{0}|.{13,13}",  maxlength = "16", placeholder = "Telefon Numaranız", @class = "phones number", title = "Telefon numaranızı başında 0 olmadan 10 hane olacak şekilde yazınız" })
            </div>
        </div>
        <div class="hr-form-input bank">
            <div class="hr-form-input-item">
                <label for="">Referans Adı Soyadı</label>
                @Html.TextBoxFor(m => m.RName3, new { placeholder = "Referans Adı Soyadı" })
            </div>
            <div class="hr-form-input-item">
                <label for="">Yetkili</label>
                @Html.TextBoxFor(m => m.RAuthorized3, new { placeholder = "Yetkili" })
            </div>
            <div class="hr-form-input-item">
                <label for="">Telefon</label>
                @Html.TextBoxFor(m => m.RPhone3, new {  pattern = ".{0}|.{13,13}", maxlength = "16", placeholder = "Telefon Numaranız", @class = "phones number", title = "Telefon numaranızı başında 0 olmadan 10 hane olacak şekilde yazınız" })
            </div>
        </div>
    </div>
    <div class="hr-form-section">
        <div class="hr-form-title">
            <span>Firmanızın Faaliyet Alanları</span>
        </div>
        <div class="hr-form-input activity">
            
                @*@Html.CheckBoxFor(m => m.Contract, new { Name = "Contract", id = "Contract-demo", required = "required" })*@
                <label for="bilgisayar"><input type="checkbox" id="bilgisayar">Bilgisayar Satışı</label>
                <label for="program"><input type="checkbox" id="program">Program Satışı</label>
                <label for="OEM"><input type="checkbox" id="OEM">OEM Satış</label>
                <label for="yazilim"><input type="checkbox" id="yazilim">Yazılım Geliştirme</label>
                <label for="egitim"><input type="checkbox" id="egitim">Eğitim</label>
                <label for="sistem"><input type="checkbox" id="sistem">Sistem Kurulumu</label>
                <label for="diger"><input type="checkbox" id="diger" />Diğer</label>
            
        </div>
    </div>
    <div class="hr-form-section">
        <div class="hr-form-title">
            <span>Sattığınız Diğer Programlar</span>
        </div>
        <div class="hr-form-input-item other-program">
            @Html.TextBoxFor(m => m.OtherSellPrograms, new { placeholder = "Sattığınız Diğer Programlar" })
        </div>
    </div>
    <div class="hr-form-section">
        <div class="hr-form-input-item">
            <div class="hr-form-input-item-button">
                @*<a href="">Gönder<i class="fas fa-arrow-right"></i></a>*@
                <input class="hp_btn" type="submit" name="SaveButton" value="Gönder" onclick="return formSubmit('AuthorizedDealerForm','','yetkili-satici-formu');" />
            </div>
        </div>
    </div>
</div>
