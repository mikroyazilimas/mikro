            <span>Firmanızın Faaliyet Alanları</span>
        </div>
        <div class="hr-form-input activity">

            @for (int i = 0; i < Model.FieldsOfActivity.Count; i++)
            {
            <div class="check">
                <label>
                    @Html.CheckBoxFor(m => m.FieldsOfActivity[i].Checked, new { id = "employmentType_" + i })
                    @Html.HiddenFor(m => m.FieldsOfActivity[i].Text)
                    @Html.DisplayFor(m => m.FieldsOfActivity[i].Text)
                </label>
            </div>
            }
        </div>
