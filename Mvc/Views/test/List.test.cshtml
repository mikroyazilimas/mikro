        }

        <div class="logo-content-item">
            @foreach (var item in ItemGroup.Items)
            {
                <a href="@item.File" target="_blank">
                    <div class="logo-content-item-img">
                    <img src="@item.Image" alt="">
                    </div>
                    <div class="logo-content-item-title">
